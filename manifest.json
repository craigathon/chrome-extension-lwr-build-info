{
    "manifest_version": 3,
    "name": "Lighting Web Runtime (LWR) Build Info",
    "description": "Learn, Demo & Build Great LWR Sites. Get information about components on the page of any live Salesforce Experience Cloud LWR site.",
    "version": "1.0.0",
    "icons": {
        "16": "logo/logo-16.png",
        "32": "logo/logo-32.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "action": {
        "default_title": "Lighting Web Runtime Build Info UI",
        "default_popup": "popup/popup.html"
    },
    "permissions": ["declarativeContent"],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [{
        "run_at": "document_end",
        "js": ["foreground.js"],
        "css": ["foreground.css"],
        "matches": [
            "https://*/*",
            "http://*/*"
          ]
    }]
}
